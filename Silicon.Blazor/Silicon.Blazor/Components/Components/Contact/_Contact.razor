@* @model ContactModel
@{
    ViewData["Title"] = "Get In Contact With Us";
} *@


<section class="contact">
    <div class="container">
        <div class="nav">
            <i class="fa-regular fa-house"></i>
            <p class="text-s">Home</p>
            <i class="fa-solid fa-angles-right"></i>
            <p class="text-s">Contact</p>
        </div>
        <div class="upper">
            <h1>Contact Us</h1>
            <div class="box">
                <div class="img-holder">
                    <img src="~/images/icons/mail-icon.svg" />
                </div>
                <div class="box-content">
                    <h5>Email Us</h5>
                    <p>Please feel free to drop us a line. We will respond as soon as possible.</p>
                    <NavLink href="#">Leave a message <i class="fa-solid fa-arrow-right"></i></NavLink>
                </div>
            </div>
            <div class="box">
                <div class="img-holder">
                    <img src="~/images/icons/careers-icon.svg" />
                </div>
                <div class="box-content">
                    <h5>Careers</h5>
                    <p>Sit ac ipsum leo lorem magna nunc mattis maecenas non vestibulum.</p>
                    <NavLink href="#">Send an application <i class="fa-solid fa-arrow-right"></i></NavLink>
                </div>
            </div>
        </div>       
        <div class="contact-form">          
            <form method="post" asp-controller="Contact" asp-action="ContactUs" novalidate>                             
@*                 @if(TempData["Status"]?.ToString() == "Success")
                {
                    <span class="alert alert-success" role="alert" id="userMessage">
                        Contact was sent!
                    </span>
                }
                @if(TempData["Status"]?.ToString() == "Error")
                {
                    <span class="alert alert-danger" role="alert" id="userMessage">
                        Please fill in all required fields!
                    </span>
                } *@
@*                 <h2>@ViewData["Title"]</h2> *@
                <div class="form-content">
                    <div id="form-fullname" class="input-group">
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name"></span>
                        <input asp-for="Name"/>
                    </div>
                    <div id="form-email" class="input-group">
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email"></span>
                        <input asp-for="Email" />
                    </div>
                    <div id="form-service" class="input-group">       
                        <label asp-for="Service"></label>
                        <select asp-for="Service">
                            <option value="Choose">Choose the service you are interested in...</option>
                            <option value="Account">Account</option>
                            <option value="Courses">Courses</option>
                            <option value="Tools">Tools</option>
                        </select>
                    </div>
                    <div id="form-message" class="input-group">
                        <label asp-for="Message"></label>
                        <span asp-validation-for="Message"></span>                       
                        <textarea asp-for="Message"></textarea>
                    </div>
                    <button class="btn-theme-s" type="submit">Send Contact Request</button>                    
                </div>                
            </form>
        </div>
    </div>
    <div class="map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d19139.51069207698!2d-122.40249320420469!3d37.73435222518834!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ssv!2sse!4v1708521307646!5m2!1ssv!2sse" width="800" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</section>

